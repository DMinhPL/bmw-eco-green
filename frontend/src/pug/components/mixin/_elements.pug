mixin e(element, text)
	- var element = typeof element != "undefined" ? element : 'div'
	- element = element != "" ? element : 'div'
	#{element}&attributes(attributes)= text
		block

//- Pre mixin
//- @mixin +pre(class)
//- @param {string} cls: class name
mixin pre(cls)
	unless cls
		- cls = ''
	pre(class=cls)
		code
			block

