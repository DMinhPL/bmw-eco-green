//- embed mixin
//- @mixin +embed()
//- @param {string} _src: link of media
//- @param {string} ratios: ratio of embed
mixin embed(_src, ratios)
	unless !_src
	.embed-responsive(class=`embed-responsive-${ratios}`)
		iframe.embed-responsive-item(src=_src, allowfullscreen='')

mixin embed-21by9(_src)
	+embed(_src, '21by9')
mixin embed-16by9(_src)
	+embed(_src, '16by9')
mixin embed-4by3(_src)
	+embed(_src, '4by3')
mixin embed-1by1(_src)
	+embed(_src, '1by1')

mixin blockquote(text,footer,author,style)
	- var text = text || ''
	- var style = style || ''
	- var footer = footer || ''
	- var author = author || ''
	blockquote.blockquote(class=style)
		!= text
		block
		if(footer !=='' || author !=='' )
			footer.blockquote-footer!= footer + ' '
				cite(title=author)!= author

mixin blockquote-center(text,footer,author,style)
	- var style = ' ' + style || ''
	+blockquote(text,footer,author,'text-center' + style)

mixin blockquote-right(text,footer,author,style)
	- var style = ' ' + style || ''
	+blockquote(text,footer,author,'text-right' + style)

mixin infoPanel(infoData, isReverse)
	unless isReverse
		- var isReverse = ''
	.eco-m-infoPanel 
		.eco-m-infoPanel_wrapper 
			.eco-m-infoPanel_content(class=isReverse?'reverse':'') 
				.eco-m-infoPanel_avatar
					.eco-m-infoPanel_avatar_image.wow.fadeInDown(data-wow-delay='0.4s')
						img(src=imgPath+infoData.srcImg, alt="avatar") 
				p.wow.fadeInUp(data-wow-delay='0.3s') #[=infoData.content]
				p.wow.fadeInUp(data-wow-delay='0.6s') #[=infoData.author]
				p.wow.fadeInUp(data-wow-delay='1.2s') #[=infoData.role]

mixin eco_image(srcImg, alt)
	.eco-image.wow.fadeIn
		img(src=imgPath+srcImg, alt=alt, loading='lazy')

mixin metro_stressText
	.metro-stressText
		p
			block

mixin metro_image(srcImg, desc, className)
	unless desc 
		- var desc = ""
	unless className 
		- var className = ""
	.metro-image(class=className)
		.metro-image_inner
			+img-bg(srcImg,"thumbnail")
		if desc
			.metro-image_desc #[=desc]
mixin metro_image_layout(srcImg1, srcImg2, srcImg3, reverse)
	.metro-imageLayout
		if !reverse
			.metro-imageLayout_item 
				.img.wow.fadeInLeft(data-wow-delay="0.4s")
					+metro_image(srcImg1)
				.img.wow.fadeInLeft(data-wow-delay="0.4s")
					+metro_image(srcImg2)
			.metro-imageLayout_item
				.img.vertical.wow.fadeInRight(data-wow-delay="0.4s")
					+metro_image(srcImg3)
		else
			.metro-imageLayout_item
				.img.vertical.wow.fadeInLeft(data-wow-delay="0.4s")
					+metro_image(srcImg3)
			.metro-imageLayout_item 
				.img.wow.fadeInRight(data-wow-delay="0.4s")
					+metro_image(srcImg1)
				.img.wow.fadeInRight(data-wow-delay="0.4s")
					+metro_image(srcImg2)
