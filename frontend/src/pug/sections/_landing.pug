			.metro-doubleImage_item.wow.fadeInRight(data-wow-delay="0.5s")
				+metro_image(imgPath+'thumb10.png','','mb-20')
			.metro-doubleImage_item.wow.fadeInLeft(data-wow-delay="0.5s")
					+metro_image(imgPath+'thumb11.png','','mb-20')
